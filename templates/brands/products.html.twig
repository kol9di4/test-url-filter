<div class="cards-section row col-9 align-content-start">
    {% for product in products %}
        <div class="col-4 bg-light">
            <div class="card mb-3">
                <div id="carousel{{ product.getId }}" class="carousel slide">
                    <div class="carousel-inner overflow-hidden"  style="height: 200px;">
                        <div class="carousel-item active mh-100">
                            <img src="https://w.forfun.com/fetch/03/03f8cd3f6796daaacc1fe43ffb7704b7.jpeg"
                                 class="d-block" alt="...">
                        </div>
                        <div class="carousel-item mh-100">
                            <img src="https://w.forfun.com/fetch/56/5656d35727009cabea6ce79973a9702c.jpeg"
                                 class="d-block" alt="...">
                        </div>
                        <div class="carousel-item mh-100">
                            <img src="https://w.forfun.com/fetch/03/03f8cd3f6796daaacc1fe43ffb7704b7.jpeg"
                                 class="d-block" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ product.getId }}"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Предыдущий</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ product.getId }}"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Следующий</span>
                    </button>
                </div>
                <div class="card-body">
                    <h3 class="mt-0">{{ product.getProduct }}</h3>
                    <h5>Price: {{ product.getPrice }}</h5>
                    <h5>Material: {{ product.getMaterial }}</h5>
                    <h5>Color: {{ product.getColor }}</h5>
                    <h5>Availability: {{ product.isAvailability ? 'yes': 'no'}}</h5>
                </div>
            </div>
        </div>
    {% endfor %}
</div>