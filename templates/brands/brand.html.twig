{#                                <label class="form-check-label" for="avaCheckChecked">#}
{#                                    Availability#}
{#                                </label>#}
{#                            </div>#}{#$('#maxPriceRange').val()#}
{#                        </div>#}
{#                    </div>#}

                    <button type="submit" class="btn btn-primary btn-sm mt-4" id="submitFilters">Submit filters</button>

                </form>
            </div>
            {% include './brands/products.html.twig' with {'products': products} %}
        </div>
    </div>

{% endblock %}